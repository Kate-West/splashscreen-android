<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Заголовок экрана -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Новости"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#333333"
        android:layout_marginBottom="30dp" />

    <!-- Статус настроек -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:padding="16dp"
        android:layout_marginBottom="20dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Текущие настройки:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/notificationStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔔 Уведомления: ВКЛ"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/soundStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔊 Звук: ВКЛ"
            android:textSize="14sp"
            android:textColor="#4CAF50" />

    </LinearLayout>

    <!-- Карточка новости 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E3F2FD"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вышло новое обновление!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавлены настройки уведомлений и улучшен интерфейс"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сегодня, 10:30"
            android:textSize="14sp"
            android:textColor="#999999" />

    </LinearLayout>

    <!-- Карточка новости 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E8F5E8"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Настройки работают!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#388E3C"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Все изменения в настройках теперь сохраняются и применяются"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Только что"
            android:textSize="14sp"
            android:textColor="#999999" />

    </LinearLayout>

    <!-- Кнопка обновления -->
    <Button
        android:id="@+id/refreshButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Обновить новости"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2196F3" />

</LinearLayout>